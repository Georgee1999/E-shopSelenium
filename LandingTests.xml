<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite parallel="tests" name="All Test Suite">
    <groups>
        <run>
            <include name="UI"/>
            <include name="SuccessLogin"/>
            <include name="InvalidLogin"/>
            <include name="InvalidPassword"/>
            <include name="InvalidEmail"/>
        </run>
    </groups>

    <test  thread-count="2" name="UI Tests">
        <classes>
            <class name="com.example.eshopselenium.tests.UITestOfLPTests"/>
        </classes>
    </test>



    <test thread-count="2" name="Login Test">
        <classes>
            <class name="com.example.eshopselenium.tests.LoginTests"/>
        </classes>
    </test>

</suite>